@model IEnumerable<ProjectManager.Domain.Entities.Client>

@{
    ViewData["Title"] = "Index";
}

<div class="d-sm-flex flex-row align-items-end justify-content-between">
    <h1>Clients</h1>
    <a asp-action="Create" class="btn btn-outline-info">Add new client</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           
            <td class="align-middle text-end">
                <a class="btn btn-outline-primary m-1" asp-action="Edit" asp-route-id="@item.Id" class="p-2">Edit</a>
                <a class="btn btn-outline-danger m-1" asp-action="Delete" asp-route-id="@item.Id" class="p-2">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
