@model ProjectManager.Domain.Entities.Client

@{
    ViewData["Title"] = "Delete Client";
}


<div class="row d-flex flex-row justify-content-center">
    <div class="col-md-6">
        <h2>Are you sure you want to delete this client?</h2>
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <h4>All client projects will also be deleted.</h4>
        <hr />

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />

            <div class="mt-2">
                <a asp-action="Index" class="btn btn-outline-dark">Back to Clients</a>
            </div>
        </form>
    </div>
</div>
